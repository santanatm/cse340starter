<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

  <%# messages() %>

  <% if (locals.loggedin) { %> 


  <section class="bg-white position-relative p-5">
      <br>
      <h2>Welcome <%- locals.accountData.account_firstname %></h2>
      <br>
      <p>You're logged in.</p>
      <br>
      <a class= "txt-blue" href="/account/update/<%- locals.accountData.account_id %>">Edit Account Information</a> <br>
      <br>
      <% if (locals.accountData.account_type == 'Employee' || locals.accountData.account_type == 'Admin') { %>        
        <h3>Inventory Management</h3>
        <br>
        <a class= "txt-blue" href="/inv">Manage Inventory</a> <br>
        <% } %> 
      <br><br>
  </section>
  
  <% } else {   
    %> 
    <br><br>
    <h1 class="txt-red">Access denied!. You must log in first.</h1>   
    <br><br>
  <% } %>
  
